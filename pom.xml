<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>id.global</groupId>
        <artifactId>microservice-parent</artifactId>
        <version>4.6</version>
        <relativePath/>
    </parent>
    <groupId>id.global.iris</groupId>
    <artifactId>router</artifactId>
    <version>1.0.6-SNAPSHOT</version>
    <scm>
        <connection>scm:git:git@github.com:globalid/core-router.git</connection>
        <developerConnection>scm:git:git@github.com:globalid/core-router.git</developerConnection>
        <url>https://github.com/globalid/core-router</url>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <version.globalid-common>1.1.8</version.globalid-common>
        <version.iris-subscription-models>1.0.0-SNAPSHOT</version.iris-subscription-models>
        <version.iris-asyncapi>1.1.6</version.iris-asyncapi>
        <version.quarkus-rabbitmq-client>0.5.0.Final</version.quarkus-rabbitmq-client>
        <version.apicurio-data-models>1.1.20</version.apicurio-data-models>
        <version.apicurio-registry-client>2.2.0.Final</version.apicurio-registry-client>
        <version.controlplane-api>0.1.30</version.controlplane-api>
        <!-- plugin dependencies -->
        <asyncapi-schema-generator-maven-plugin.version>1.1.4</asyncapi-schema-generator-maven-plugin.version>
        <!-- variables -->
        <globalid-common.artifact>id.global.common:globalid-common</globalid-common.artifact>
    </properties>
    <dependencies>
        <dependency>
            <groupId>id.global.common</groupId>
            <artifactId>globalid-common</artifactId>
            <version>${version.globalid-common}</version>
        </dependency>
        <dependency>
            <groupId>id.global.iris</groupId>
            <artifactId>iris-asyncapi</artifactId>
            <version>${version.iris-asyncapi}</version>
        </dependency>
        <dependency>
            <groupId>id.global.iris</groupId>
            <artifactId>iris-subscription-models</artifactId>
            <version>${version.iris-subscription-models}</version>
        </dependency>

        <dependency>
            <groupId>io.quarkiverse.rabbitmqclient</groupId>
            <artifactId>quarkus-rabbitmq-client</artifactId>
            <version>${version.quarkus-rabbitmq-client}</version>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-websockets</artifactId>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-scheduler</artifactId>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-smallrye-jwt</artifactId>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-grpc</artifactId>
        </dependency>
        <dependency>
            <groupId>io.envoyproxy.controlplane</groupId>
            <artifactId>api</artifactId>
            <version>${version.controlplane-api}</version>
        </dependency>

        <!--        Test dependencies -->
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-junit5-mockito</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>

            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>io.quarkus</groupId>
                            <artifactId>quarkus-extension-processor</artifactId>
                            <version>${version.quarkus}</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>id.global.iris</groupId>
                <artifactId>asyncapi-schema-generator-maven-plugin</artifactId>
                <version>${asyncapi-schema-generator-maven-plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-schema</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <scanDependenciesDisable>true</scanDependenciesDisable>
                    <annotationsArtifacts>
                        <annotationsArtifact>${globalid-common.artifact}</annotationsArtifact>
                    </annotationsArtifacts>
                    <excludeFromSchemas>
                        com.fasterxml.jackson.databind.JsonNode,java.util.Map
                    </excludeFromSchemas>
                    <apicurioRegistryUrl>https://schema.internal.globalid.dev/</apicurioRegistryUrl>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
